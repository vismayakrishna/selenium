<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MultiBrowsing" parallel="tests" thread-count="2">
	
	<listeners>
		<listener class-name="generatereport.Listeners"></listener>
	</listeners>
	
  <test name="ChromeTest">
	  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="testscripts.LoginTest">
			<methods>
				<include name="verifyThatTheUserCanLoginWithValidCredentials"></include>
			</methods>
	  </class>
    </classes>
  </test>
  
  <test name="EdgeTest">
	  <parameter name="browser" value="edge"></parameter>
	<classes>
      <class name="testscripts.LoginTest">
			<methods>
				<include name="verifyThatTheUserCanLoginWithValidCredentials"></include>
			</methods>
	  </class>
    </classes>
  </test>
  
</suite>
